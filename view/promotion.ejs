<%- include('./src/header'); %>
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <h4 class="page-title mb-2"><i class="dripicons-user-group"></i>  Promosyon Kodları</h4>  
            <div class="">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Bira Cini</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Promosyon Kodları</a></li>
                </ol>
            </div>                                      
        </div>
    </div>
</div>
<%- include('./src/sidebar'); %>
    <div class="page-content">
        <div class="container-fluid"> 
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="mt-0 header-title"><%= title %></h4>
                            <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                <tr>
                                    <th>Kod</th>
                                    <th>Kod Sayısı</th>
                                    <th>Fal Hakkı</th>
                                    <th>Oluşturma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% find_promotion.forEach(function(promotion){ %>                           
                                    <tr>
                                            <td><%= promotion.promotionCode%></td>
                                            <td><%= promotion.promotionCount %></td>
                                            <td><%= promotion.promotionRights %></td>
                                            <td><%= moment(promotion.promotionCreated).format("DD MM YYYY - h:mm:ss"); %></td>
                                            <td>
                                                <a href="../deletePromotion/<%= promotion._id %>" class="btn btn-sm btn-warning"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr> 
                                  <% }); %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div><!-- container -->
    </div>
<%- include('./src/footer'); %>

